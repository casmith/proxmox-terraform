# Proxmox Configuration
# Note: API credentials should be in secrets.tfvars (not committed to git)

# Shared VM Configuration
vm_storage        = "local-lvm"
vm_network_bridge = "vmbr0"
vm_ip_address     = "dhcp"
vm_gateway        = "192.168.10.1"

# Ubuntu VMs
ubuntu_vm_count     = 2
ubuntu_vm_name      = "ubuntu-vm"
ubuntu_vm_cores     = 2
ubuntu_vm_memory    = 2048
ubuntu_vm_disk_size = 20

# Talos Linux VMs (Kubernetes nodes)
talos_vm_count     = 0  # Set to 3+ for a Kubernetes cluster
talos_vm_name      = "talos-k8s"
talos_vm_cores     = 2
talos_vm_memory    = 4096
talos_vm_disk_size = 30

# To add more VM types in the future:
# 1. Create ansible/setup-{type}-template.yml
# 2. Create vms-{type}.tf
# 3. Add variables in variables.tf
# 4. Add outputs in outputs.tf
